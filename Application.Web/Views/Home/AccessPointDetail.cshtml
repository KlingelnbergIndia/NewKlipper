@model IEnumerable<UseCaseBoundary.DTO.AccessPointRecord>

@{
    Layout = null;
}

<style>
    th, td {
        text-align: center
    }
</style>
@if (Model.Count()!=0)
{
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>Time In</th>
            <th>Time Out</th>
            <th>Time Spend</th>
            <th>Access Point</th>
        </tr>
        </thead>
        <tbody>
   

        @foreach (var item in Model)
        {
            <tr>
                @if (item.TimeIn.Hour == 0 && item.TimeIn.Minute == 0)
                {
                    <td>-</td>
                }
                else
                {
                    <td>@item.TimeIn.Hour.ToString("D2"):@item.TimeIn.Minute.ToString("D2")</td>
                }
                @if (item.TimeOut.Hour == 0 && item.TimeOut.Minute == 0)
                {
                    <td>-</td>
                }
                else
                {
                    <td>@item.TimeOut.Hour.ToString("D2"):@item.TimeOut.Minute.ToString("D2")</td>
                }
                @if (item.TimeSpend.Hour == 0 && item.TimeSpend.Minute == 0)
                {
                    <td>-</td>
                }
                else
                {
                    <td>@item.TimeSpend.Hour.ToString("D2"):@item.TimeSpend.Minute.ToString("D2")</td>
                }

                <td>@item.AccessPoint</td>
            </tr>
        }
   
        </tbody>
    </table>
    <div>
        <font color="red">  * Lunch duration (45 minute) is also included in working hours</font>
    </div>
}
else
{
    <tr>
        <td> <p> Punch is not recorded</p></td>
    </tr>
       
}


