@model ReporteeViewModel

@{
    var isLeaveCountZero = @Model.leaveRecordsOfSelectedReportee.Count == 0;
}
<div class="panel-info" style="@(Model.reportees.Count==0 ? "visibility:hidden" : "visibility:visible")">
    <div class="panel panel-heading col-md-12 col-sm-12">
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
            <form action="GetSelectedreportee?selectedViewTabs=leaveReportMenu" method="post">
                <div class="form-inline">
                    <div class="form-group">
                        <label for="reporteesId">Reportee</label>
                        <select id="reporteesId" name="selectMenu" class="form-control input-sm" style="margin-left:10px">
                            @if (Model.LeaveFormName == string.Empty || Model.LeaveFormName == null)
                            {
                                <option selected value="0" disabled>---Select Reportee---</option>
                            }
                            @foreach (var item in Model.reportees)
                            {
                                if (item.Key == Model.SelectedEmpIdForLeaveTab)
                                {
                                    <option value=@item.Key selected>@item.Value</option>
                                }
                                else
                                {
                                    <option value=@item.Key>@item.Value</option>
                                }
                            }
                        </select>
                    </div>

                    <input type="submit" value="Show" class="btn btn-info btn-sm pull" style="width:60px;margin-left:20px" />
                </div>
            </form>
        </div>
    </div>


    <div class="main">
        <div class="col-md-12" style="@(isLeaveCountZero ==false ? "display:none" : "display:block")">
            @if (!string.IsNullOrEmpty(@Model.LeaveFormName))
            {
                <div class="row" style="color:#23527C;">No applied leaves found for @Model.LeaveFormName</div>
            }
        </div>
        @if (@Model.leaveRecordsOfSelectedReportee.Any())
        {
            <div style="color:#23527C;">Applied leaves summary for @Model.LeaveFormName</div><br />
        }

        @if (@Model.LeaveSummary != null)
        {
            <div class="col-md-12">
                <h4> Leave Summary</h4>
                <table class="table table-responsive table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="col-md-2 col-lg-2 col-xs-2">Leave Type</th>
                            <th class="col-md-2 col-lg-2 col-xs-2">Total Leave Available</th>
                            <th class="col-md-2 col-lg-2 col-xs-2">Leave Taken</th>
                            <th class="col-md-2 col-lg-2 col-xs-2">Remaining Leave</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var leaveSummary in @Model.LeaveSummary)
                        {
                            <tr>
                                <td>@leaveSummary.LeaveType</td>
                                <td>@leaveSummary.TotalAvailableLeave</td>
                                <td>@leaveSummary.LeaveTaken</td>
                                <td>@leaveSummary.RemainingLeave</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        <div class="col-md-12" style="@(isLeaveCountZero ? "display:none" : "display:block")">
            <h4>Leave Details</h4>
            <table class="table table-responsive table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="col-md-2 col-lg-2 col-xs-2">From Date</th>
                        <th class="col-md-2 col-lg-2 col-xs-2">To Date</th>
                        <th class="col-md-2 col-lg-2 col-xs-2">No Of Days</th>
                        <th class="col-md-2 col-lg-2 col-xs-2">Leave Type</th>
                        <th class="col-md-3 col-lg-3 col-xs-3">Remark</th>
                        <th class="col-md-2 col-lg-2 col-xs-2">Change Plan</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var leave in @Model.leaveRecordsOfSelectedReportee)
                    {
                    <tr>
                        <td>@leave.FromDate.ToString("dd-MMM-yyyy")</td>
                        <td>@leave.ToDate.ToString("dd-MMM-yyyy")</td>
                        <td>@leave.NoOfDays</td>
                        <td>@leave.TypeOfLeave</td>
                        <td>@leave.Remark</td>
                        <td class="text-center">
                            @*<span data-toggle="tooltip" class="glyphicon glyphicon-pencil" title="Update Leave" style="cursor:pointer;margin-right:10px;"></span>*@
                            <span data-toggle="tooltip" class="glyphicon glyphicon-remove" title="Cancel Leave" onclick=CancelLeave("@leave.LeaveId") style="cursor:pointer;margin-right:10px;"></span>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>

</div>
<script src="~/js/common.Leave.js"></script>