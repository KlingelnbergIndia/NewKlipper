@model Application.Web.Models.LeaveViewModel
@{
    var leaveTypes = @Model.GetAllLeaveTypes();
    var isLeaveCountZero = @Model.GetAppliedLeaves.Count == 0;
    var isTeamLead = @Model.IsTeamLead;
}

<div class="main" style="margin-top:-20PX;">
    <h1>Apply Leave</h1>
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <form class="form-group" action="/action_page.php">
            <div class="form-group">
                <label>Date</label>
                <input type="text" asp-for="@Model.leaveDTO.Date" class="form-control" placeholder="User Name">
                <span asp-validation-for="@Model.leaveDTO.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Leave Type</label>
                <select id="leaveList" name="leaveList" class="form-control input-sm">
                    <option selected value="0" disabled>---Select Leave Type---</option>
                    @foreach (var leave in leaveTypes)
                    {
                        <option value="@leave.Key">@leave.Value</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Remark</label>
                <textarea asp-for="@Model.leaveDTO.Remark" class="form-control" placeholder="Remark" rows="5"></textarea>
                <span asp-validation-for="@Model.leaveDTO.Remark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Apply" class="btn btn-default btn-info pull-right" />
            </div>
        </form>
    </div>
    <div class="col-md-12" style="@(isLeaveCountZero ? "visibility:hidden" : "visibility:visible")">
        <table class="table table-responsive table-striped table-bordered">
            <thead>
                <tr>
                    <th class="col-md-1 col-lg-1 col-xs-1">#No</th>
                    <th class="col-md-2 col-lg-2 col-xs-2">Leave Date</th>
                    <th class="col-md-2 col-lg-2 col-xs-2">Leave Type</th>
                    <th class="col-md-6 col-lg-6 col-xs-6">Remark</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var leave in @Model.GetAppliedLeaves)
                {
                    <tr>
                        <td></td>
                        <td>@leave.Date</td>
                        <td>@leave.TypeOfLeave</td>
                        <td>@leave.Remark</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-12" style="@(isLeaveCountZero ==false ? "visibility:hidden" : "visibility:visible")">
        <div class="alert alert-info col-md-3">
            <strong>Info!</strong> No applied leaves found.
        </div>
    </div>
</div>


<div class="panel-info" style="@(isTeamLead?"visibility:visible": "visibility:hidden")">
    <div class="panel panel-heading col-md-12 col-sm-12">
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
            @using (Html.BeginForm("GetSelectedreportee", "Home", FormMethod.Post))
            {
               
                <div class="form-inline" style="margin-top: 0.5%">
                    <div class="form-group">
                        <label for="reporteesId">Reportee</label>
                        <select id="leaveList" name="leaveList" class="form-control input-sm">
                            <option selected value="0" disabled>---Select Reportees---</option>
                            @if (Model.ReporteesList.Count != 0)
                            {
                                @foreach (var reportee in @Model.ReporteesList)
                                {
                                    <option value="@reportee.ID">@reportee.FirstName </option>
                                }
                            }
                        </select>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



