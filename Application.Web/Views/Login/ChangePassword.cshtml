@model Application.Web.Models.ChangedPasswordViewModel

@{
    ViewData["Title"] = "ChangePassword";
}

<div class="col-md-12" style="margin-bottom:10px;">
    @if (@TempData["errorMessage"] != null)
    {
        <div class="alert alert-warning success-alert-animation ">
            @TempData["errorMessage"]
        </div>
    }
</div>

<div>
    <div class="main">
        <div class="col-md-6 col-sm-12 col-xs-12">
            <h2>Change Password</h2>
            <br/>
            <div class="login-form">

                <form method="post" asp-action="ChangePassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>
                    <div class="form-group">
                        <label>Current Password</label>
                        <input type="password" asp-for="@Model.CurrentPassword" class="form-control" placeholder="Password" style="width: 300px;">
                        <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>New Password</label>
                        <input type="password" asp-for="@Model.NewPassword" class="form-control" placeholder="Password" style="width: 300px;">
                        <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Password" style="width: 300px;">
                        <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" style="background-color: lightblue" class="btn btn-black">Save</button>

                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

