@model IEnumerable<Models.Core.HR.Attendance.AttendanceRecord>
@{
	ViewData["Title"] = "Home Page";
}

<style>
	th,td {text-align: center}
</style>
<div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Date
				</th>
				<th>
					Time In
				</th>
				<th>
					Time Out
				</th>
				<th>
					Late By
				</th>
				<th>
					OverTime
				</th>
				<th>
					Total Working Hours
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				var lateByColor = "White";
				var overTimeColor = "White";
				if (item.LateBy != TimeSpan.Zero)
				{
					lateByColor = "crimson";
				}
				if (item.OverTime != TimeSpan.Zero)
				{
					overTimeColor = "aquamarine";
				}
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Date)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TimeIn)
					</td>
					@if (item.TimeOut == TimeSpan.Zero)
					{
						<td>-</td>
					}
					else
					{
						<td>
							@Html.DisplayFor(modelItem => item.TimeOut)
						</td>
					}
					<td style="background:@lateByColor">
						@Html.DisplayFor(modelItem => item.LateBy)
					</td>
					<td style="background:@overTimeColor">
						@Html.DisplayFor(modelItem => item.OverTime)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.TotalWorkingHours)
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

