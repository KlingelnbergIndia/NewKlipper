@model IEnumerable<Models.Core.HR.Attendance.AttendanceRecord>
@{
	ViewData["Title"] = "Home Page";
}

<div>
	<table class="table">
		<thead>
			<tr>
				<th style="text-align: center">
					Date
				</th>
				<th style="text-align: center">
					Time In
				</th>
				<th style="text-align: center">
					Time Out
				</th>
				<th style="text-align: center">
					Late By
				</th>
				<th style="text-align: center">
					OverTime
				</th>
				<th style="text-align:center">
					Total Working Hours
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				var lateByColor = "crimson"; 
				var overTimeColor = "aquamarine";
				if (item.LateBy == TimeSpan.Zero)
				{
					lateByColor = "White";
				}
				if (item.OverTime == TimeSpan.Zero)
				{
					overTimeColor = "White";
				}
				<tr>
					<td style="text-align: center">
						@Html.DisplayFor(modelItem => item.Date)
					</td>
					<td style="text-align: center">
						@Html.DisplayFor(modelItem => item.TimeIn)
					</td>
					@if (item.TimeOut == TimeSpan.Zero)
					{
						<td style="text-align: center">-</td>
					}
					else
					{
						<td style="text-align: center">
							@Html.DisplayFor(modelItem => item.TimeOut)
						</td>
					}
					<td style="background:@lateByColor;text-align: center">
						@Html.DisplayFor(modelItem => item.LateBy)
					</td>
					<td style="background:@overTimeColor;text-align: center">
						@Html.DisplayFor(modelItem => item.OverTime)
					</td>
					<td style="text-align: center">
						@Html.DisplayFor(modelItem => item.TotalWorkingHours)
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

